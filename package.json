{
    "name": "policy-based-authorization-system",
    "version": "0.1.0",
    "description": "A policy-based authorization system for Node.js and NestJS applications",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        },
        "./nestjs": {
            "types": "./dist/nestjs/index.d.ts",
            "require": "./dist/nestjs/index.js",
            "import": "./dist/nestjs/index.mjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "build:watch": "tsup --watch",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:cov": "vitest run --coverage",
        "lint": "biome lint --write",
        "format": "biome format --write",
        "prepare": "bun run build && husky",
        "release": "release-it"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "devDependencies": {
        "@biomejs/biome": "^2.3.8",
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@types/bun": "^1.3.4",
        "@vitest/coverage-istanbul": "4.0.15",
        "husky": "^9.1.7",
        "release-it": "^19.1.0",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3",
        "vitest": "^4.0.15"
    },
    "peerDependencies": {
        "@nestjs/common": "^11.1.9",
        "reflect-metadata": "^0.2.2"
    }
}
